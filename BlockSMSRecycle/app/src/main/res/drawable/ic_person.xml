<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="oval"
            >
            <solid android:color="@color/colorBlue"/>
            <corners android:radius="3dp"/>
            <size android:height="@dimen/activity_horizontal_margin" android:width="@dimen/activity_horizontal_margin"/>

        </shape>
    </item>

    <item android:drawable="@drawable/user"
        android:left="30dp"
        android:right="30dp"
        android:top="30dp"
        android:bottom="30dp">

    </item>

</layer-list>


